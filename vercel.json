{
  "version": 2,

  "github": {
    "enable": false
  },
  "builds": [
    {
      "src": "backend/src/main.ts",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/build/index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "backend/src/main.ts",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    },
    { "src": "/(.*).(js|css|ico)", "dest": "frontend/*" },
    { "src": "/(.*)", "dest": "frontend/build/index.html" },
    {
      "src": "/(.*)",
      "dest": "backend/src/main.ts"
    }
  ]
}
